@model IEnumerable<NationalTeamVM>

@{
    ViewData["Title"] = "Listado de selecciones nacionales.";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Agregar una selección nacional.</a>
    <div>
        <form asp-action="Index" method="GET">
            <div>
                <label name="Id" class="control-label"></label>
                <input name="Id" class="form-control" />
                <span name="Id" class="text-danger"></span>
                <div class="form-group">
                    <input type="submit" value="Find" class="btn btn-primary" />
                </div>
            </div>

        </form>
    </div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bettors)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bettors)
            </td>
            @*<td>
            @item.idCountry
        </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id}) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id})
            </td>
        </tr>
}
    </tbody>
</table>
